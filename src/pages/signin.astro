---
import RootLayout from "../layouts/RootLayout.astro";
import { POST } from "./api/auth/signin.ts";

const { cookies } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
  return Astro.redirect("/");
}

if (Astro.request.method === "POST") {
  try {
    let response = await POST(Astro);
    const resData = await response.json();
    if (response.ok) {
      return Astro.redirect("/");
    } else {
      throw new Error(resData.message);
    }
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}
---

<RootLayout title="Sign in">
  <h1>Sign in</h1>
  <p class="info">
    New here? <a href="/register" class="info-link">Create an account</a>
  </p>
  <form method="post">
    <div class="email">
      <label for="email">Email</label>
      <input type="email" name="email" id="email" required autocomplete="on" />
    </div>
    <div class="pw">
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        required
        autocomplete="on"
        minlength="8"
      />
    </div>
    <button type="submit">Login</button>
  </form>
</RootLayout>

<style>
  h1 {
    text-align: center;
    font-size: 1.75rem;
  }

  .info {
    text-align: center;
    margin-bottom: 1rem;
  }

  .info-link {
    color: var(--accentGreen);
    margin-left: 0.5rem;
  }

  form {
    padding: 1rem;
    border: 1px solid var(--accentTan);
    border-radius: 4px;
    display: grid;
    grid-template-areas: "email" "pw" "btn";
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  form div {
    inline-size: 100%;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  form div:last-of-type {
    margin-bottom: 0.25rem;
  }

  label {
    text-transform: uppercase;
    font-size: 0.875rem;
  }

  .email {
    grid-area: email;
  }

  .pw {
    grid-area: pw;
  }

  button {
    grid-area: btn;
    background-color: var(--accentGreen);
    color: var(--background);
    padding: 0.5rem 0;
    font-weight: bold;
    border-color: var(--accentGray);
  }

  button:focus {
    outline-color: var(--accentTan);
  }

  @media (min-width: 768px) {
    form {
      max-width: 45dvw;
      margin: 0 auto;
    }
  }
</style>
