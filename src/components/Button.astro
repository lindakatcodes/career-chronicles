---
const { class: className } = Astro.props;
---

<button class={className}><slot /></button>

<style>
  button {
    color: var(--background);
    text-decoration: none;
    background: var(--accentGray);
    border-radius: 4px;
    inline-size: 7.25rem;
    text-align: center;
    padding: 0.375rem;
    transition: font-weight 0.15s ease-in-out;
  }

  button:hover {
    font-weight: bold;
  }

  .gold {
    background: var(--accentTan);
  }

  .green {
    background: var(--accentGreen);
  }

  .text-sm {
    font-size: 0.875rem;
  }
</style>
