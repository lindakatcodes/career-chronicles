---
const { class: className, submitBtnLabel, cancelBtnLabel } = Astro.props;
---

<form method="post" class={className}>
  <slot />
  {
    cancelBtnLabel ? (
      <div class="btns">
        <button type="button" class="cancel">
          {cancelBtnLabel}
        </button>
        <button type="submit" class="submit">
          {submitBtnLabel}
        </button>
      </div>
    ) : (
      <button type="submit" class="submit">
        {submitBtnLabel}
      </button>
    )
  }
</form>

<style>
  form {
    margin: 1rem 0;
    padding: 1rem;
    border: 1px solid var(--accentTan);
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  button {
    margin-top: 0.25rem;
    padding: 0.5rem 0;
    font-weight: bold;
    border-color: var(--accentGray);
    color: var(--background);
  }

  .submit {
    background-color: var(--accentGreen);
  }

  .cancel {
    background-color: var(--accentGray);
  }

  .btns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    form {
      max-width: 45dvw;
      margin: 1rem auto;
    }
  }
</style>

<script>
  const cancelBtn = document.querySelector(".cancel");
  cancelBtn?.addEventListener("click", () => {
    const form: HTMLFormElement = cancelBtn.parentNode as HTMLFormElement;
    form && form.reset();
  });
</script>
