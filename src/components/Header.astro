---
import Navigation from "./Navigation.astro";
import ThemeSwitch from "./ThemeSwitch.vue";
---

<header>
  <button class="menu-btn">
    <span class="line"></span>
  </button>
  <div class="items">
    <Navigation />
    <ThemeSwitch client:only />
  </div>
</header>

<style>
  header {
    height: 2.5rem;
    width: 100%;
  }

  .menu-btn {
    cursor: pointer;
    background: none;
    border: none;
    height: 2rem;
    margin: 0.5rem;
  }

  .line {
    background: var(--text);
    display: block;
    position: relative;
    height: 0.125rem;
    width: 2rem;

    &::before,
    &::after {
      content: "";
      background: var(--text);
      display: block;
      position: absolute;
      height: 100%;
      width: 100%;
      transition: all 0.2s ease-out;
    }

    &::before {
      top: 0.375rem;
    }

    &::after {
      top: -0.375rem;
    }

    &.menu-open {
      background: transparent;

      &::before {
        transform: rotate(-45deg);
        top: 0;
      }

      &::after {
        transform: rotate(45deg);
        top: 0;
      }
    }
  }

  .items {
    container-type: size;
    width: 100%;
    height: 75%;
    position: fixed;
    background: var(--background);
    overflow: hidden;
    max-width: 0;
    transition: max-width 0.4s ease-in-out;

    &.menu-open {
      max-width: 100%;
    }
  }

  @media (min-width: 768px) {
    header {
      height: 4rem;
    }

    .menu-btn {
      display: none;
    }

    .items {
      max-width: initial;
      height: 100%;
      position: relative;
      overflow: visible;
      padding: 1rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }
  }
</style>

<script>
  const menuToggle = document.querySelector(".menu-btn");
  menuToggle?.addEventListener("click", () => {
    document.querySelector(".items")?.classList.toggle("menu-open");
    document.querySelector(".line")?.classList.toggle("menu-open");
  });
</script>
